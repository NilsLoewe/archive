#dashboard-gather
  .row.js-eq-height-target
    =render "progress", progress: "33"
    =render "proceed"

    .row
      .col-sm-2.col-sm-offset-5#introStart

    .row.options
      .col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1
        .row
          -i=0
          -@decision.options.each_with_index do |option, idx|
            = render option,
              wrapper: "col-xs-12 col-sm-6 col-lg-4",
              editoption: true,
              deletelink: true,
              selectbutton: false,
              disablefacts: false,
              rating: false,
              newfact: true,
              comments: true,
              newcomment: true,
              review: false,
              index: nil
            -if((idx + 1) % 3 == 0)
              .clearfix.visible-lg
            -if((idx + 1) % 2 == 0)
              .clearfix.visible-md.visible-sm.visible-xs

          .col-sm-2.pull-left{:id=> "addoption"}
            %a{ href: "#" }
              .visual-white.js-new-option
                .visual-white-link
                  %i.fa.fa-plus.fa-2x
          .col-xs-12.col-sm-6.col-lg-4{:id=> "newoption", :style=>"display: none"}
            .new-option
              = render 'options/form'
          .col-xs-12.col-sm-6.col-lg-4{:id=> "waitforoption", :style=>"display: none"}
            .new-option
              %h4= I18n.t('pages.dashboard.gather.new.title')
              %p= I18n.t('pages.dashboard.gather.new.description')
              %p.centered
                %i.fa.fa-spinner.fa-pulse.fa-3x
