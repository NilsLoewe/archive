= bootstrap_form_for(@fact, url: (@fact.new_record? ? dashboard_facts_path(params[:dashboard_token]) : dashboard_fact_path(params[:dashboard_token], @fact)), layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", remote: request.xhr?, html: { data: { modal: true } }) do |fact|

  .modal-body
    = fact.text_field :title, placeholder: true

  .modal-footer
    = fact.submit I18n.t('fact.edit'), class: "btn btn-success"
