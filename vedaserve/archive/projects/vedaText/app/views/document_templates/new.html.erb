<% provide(:title, 'Create Template') %>
<h1>Create Template</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@document_template) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :filename %>
      <%= f.text_field :filename %>

      <%= f.submit "Create Template", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
