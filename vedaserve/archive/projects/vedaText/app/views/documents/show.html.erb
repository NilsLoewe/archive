<% provide(:title, @document.title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @document.title %>
      </h1>
      <%= render 'shared/document_part_form' %>
      <%= render 'shared/render_document_form' %>
    </section>
  </aside>
  <div class="span8">
    <%= form_for(@document) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :template %>
      
      <%= f.label :document_template %>
      <%= select(:document, :document_template_id, DocumentTemplate.all.collect {|t| [ t.name, t.id ] }, {:prompt => 'Select Template'}, :selected => f.object.document_template_id ) %>

      <%= f.submit "save changes", class: "btn btn-small btn-primary" %>

    <% end %>
  </div>
  <div class="span8">
      <%= render @document.document_parts %>
  </div>
</div>

<%= render 'shared/modal_header_document_created' %>
<%= render 'shared/modal_header_servers_busy' %>

