.modal.fade{:id=> "new_#{type}", :tabindex => "-2", "data-focus-on" => "input:first"}
  .modal-header
    %h4.modal-title New Source
  .modal-body
    .modal-body-content
      = form_for(@source) do |f|
        .field
          = f.label :title
          = f.text_field(:title, :size => '10')
        .field
          = f.hidden_field :decision_id, :value => @decision.id
          = f.hidden_field :type, :value => type
          = f.submit "Save changes", class: "btn btn-large btn-primary"
          %button.btn{"data-dismiss" => "modal", :type => "button"} Close