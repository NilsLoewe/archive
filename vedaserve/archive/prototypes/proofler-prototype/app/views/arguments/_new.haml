.modal.fade{:id=> "new_argument", :tabindex => "-1"}
  .modal-header
    %h4.modal-title Neues Argument
  .modal-body
    .modal-body-content
      = form_for(@argument) do |f|
        .row
          .col-md-3
            = f.label :title
          .col-md-6
            = f.text_field(:title, :size => 40)
        .row.pull-right
          = f.hidden_field :decision_id, :value => decisionid
          %button.btn{"data-dismiss" => "modal", :type => "button"} Close
          = f.submit "Save changes", class: "btn btn-large btn-primary"

