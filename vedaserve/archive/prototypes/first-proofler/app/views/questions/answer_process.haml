              .col-xs-3
                .accordion
                  = render :partial => 'searches/edit', :locals => {:question => @question, :search => @search, :type => 'LibrarySearch' }
                  = render :partial => 'sources/list', :locals => {:sources => @sources, :search => @search, :type => 'LibrarySearch' }

