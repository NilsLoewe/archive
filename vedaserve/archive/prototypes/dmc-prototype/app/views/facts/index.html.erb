<h1>Listing facts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Option</th>
      <th>Title</th>
      <th>Content</th>
      <th>Link</th>
      <th>Source</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.option_id %></td>
        <td><%= fact.title %></td>
        <td><%= fact.content %></td>
        <td><%= fact.link %></td>
        <td><%= fact.source %></td>
        <td><%= link_to 'Show', fact %></td>
        <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
        <td><%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fact', new_fact_path %>
