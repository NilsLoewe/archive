- provide(:title, "Aufgabe editieren")
%h4 Aufgabe bearbeiten
.row
  .col-xs-12
    = form_for(@periodic) do |f|
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :description
        = f.text_area(:description, :size => '50x10')
      .field
        = f.submit "Save changes", class: "btn btn-large btn-primary"

%h4 Aufgabe löschen
= link_to 'Aufgabe löschen', @periodic, :method=>:delete, :confirm => "Are you sure?", :title => "Aufgabe löschen", :class => "btn btn-large btn-danger"
